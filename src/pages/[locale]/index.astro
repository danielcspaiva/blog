const pageContent = content[lang];
---

<Layout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <aside data-pagefind-ignore>
      <h1 class="font-semibold text-black dark:text-white">
        {pageContent.title}
      </h1>
      <div class="space-y-16">
        <section>
          <article class="space-y-4">
            <span>
              <p>
                {pageContent.description} <Link href="https://astro.build/">Astro</Link>.
                {pageContent.additionalInfo} <Link href="https://pagefind.app/">Pagefind</Link> 
                <Link href="https://giscus.app">Giscus</Link> 
                <Link href="/blog/00-micro-changelog">blog post</Link>.
              </p>
            </span>
            <span class="animate">
              <p>
                {pageContent.microFeatures}
              </p>
              <p>
                {pageContent.getStarted}
                <Link href="https://github.com/trevortylerlee/astro-micro">
                  GitHub
                </Link>
              </p>
            </span>
          </article>
        </section>

        <section class="animate space-y-6">
          <div class="flex flex-wrap items-center justify-between gap-y-2">
            <h2 class="font-semibold text-black dark:text-white">
              {pageContent.latestPosts}
            </h2>
            <Link href="/blog"> {pageContent.seeAllPosts} </Link>
          </div>
          <ul class="not-prose flex flex-col gap-4">
            {
              blog.map((post) => (
                <li>
                  <ArrowCard entry={post} locale={locale} />
                </li>
              ))
            }
          </ul>
        </section>

        <section class="animate space-y-6">
          <div class="flex flex-wrap items-center justify-between gap-y-2">
            <h2 class="font-semibold text-black dark:text-white">
              {pageContent.recentProjects}
            </h2>
            <Link href="/projects"> {pageContent.seeAllProjects} </Link>
          </div>
          <ul class="not-prose flex flex-col gap-4">
            {
              projects.map((project) => (
                <li>
                  <ArrowCard entry={project} locale={locale} />
                </li>
              ))
            }
          </ul>
        </section>

        <section class="animate space-y-4">
          <h2 class="font-semibold text-black dark:text-white">
            {pageContent.letsConnect}
          </h2>
          <article>
            <p>
              {pageContent.contactInfo}
            </p>
          </article>
          <ul class="not-prose flex flex-wrap gap-2">
            {
              SOCIALS.map((SOCIAL) => (
                <li class="flex gap-x-2 text-nowrap">
                  <Link
                    href={SOCIAL.HREF}
                    external
                    aria-label={`${SITE.TITLE} ${lang === 'en' ? 'on' : 'no'} ${SOCIAL.NAME}`}
                  >
                    {SOCIAL.NAME}
                  </Link>
                  {"/"}
                </li>
              ))
            }
            <li class="line-clamp-1">
              <Link
                href={`mailto:${SITE.EMAIL}`}
                aria-label={`Email ${SITE.TITLE}`}
              >
                {SITE.EMAIL}
              </Link>
            </li>
          </ul>
        </section>
      </div>
    </aside>
  </Container>
</Layout> 