---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import { SITE, HOME, SOCIALS, CAL_BOOKING } from "@consts";
import ArrowCard from "@components/ArrowCard.astro";
import Link from "@components/Link.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import { ui, languages } from "../../i18n/ui";

export function getStaticPaths() {
  return Object.keys(languages).map(locale => ({
    params: { locale },
    props: { locale }
  }));
}

const { locale } = Astro.params;
const lang = locale as keyof typeof ui;
const t = useTranslations(lang);

const blog = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE);

const projects: CollectionEntry<"projects">[] = (
  await getCollection("projects")
)
  .filter((project) => !project.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_PROJECTS_ON_HOMEPAGE);

// Content based on locale
const content = {
  en: {
    title: "Introducing Astro Micro üî¨",
    description: "Astro Micro is an accessible theme for Astro. It's a fork of Mark Horn's popular theme Astro Nano. Like Nano, Micro comes with zero frameworks installed.",
    additionalInfo: "Micro adds features like Pagefind for search, Giscus for comments, and more.",
    microFeatures: "Micro still comes with everything great about Nano ‚Äî full type safety, a sitemap, an RSS feed, and Markdown + MDX support. Styled with TailwindCSS and preconfigured with system, light, and dark themes.",
    getStarted: "Visit Astro Micro on GitHub to fork the repository to get started.",
    latestPosts: "Latest posts",
    seeAllPosts: "See all posts",
    recentProjects: "Recent projects",
    seeAllProjects: "See all projects",
    letsConnect: "Let's Connect",
    contactInfo: "If you want to get in touch with me about something or just to say hi, reach out on social media or send me an email.",
    scheduleMeeting: "Schedule a Meeting"
  },
  'pt-br': {
    title: "Apresentando Astro Micro üî¨",
    description: "Astro Micro √© um tema acess√≠vel para Astro. √â um fork do tema popular de Mark Horn chamado Astro Nano. Como o Nano, o Micro vem sem frameworks instalados.",
    additionalInfo: "O Micro adiciona recursos como Pagefind para busca, Giscus para coment√°rios, e mais.",
    microFeatures: "O Micro ainda vem com tudo de bom do Nano ‚Äî seguran√ßa de tipos completa, um sitemap, um feed RSS e suporte a Markdown + MDX. Estilizado com TailwindCSS e pr√©-configurado com temas de sistema, claro e escuro.",
    getStarted: "Visite Astro Micro no GitHub para fazer um fork do reposit√≥rio e come√ßar.",
    latestPosts: "√öltimos posts",
    seeAllPosts: "Ver todos os posts",
    recentProjects: "Projetos recentes",
    seeAllProjects: "Ver todos os projetos",
    letsConnect: "Vamos nos conectar",
    contactInfo: "Se voc√™ quiser entrar em contato comigo sobre algo ou apenas para dizer ol√°, me encontre nas redes sociais ou envie um email.",
    scheduleMeeting: "Agendar uma Reuni√£o"
  }
};

const pageContent = content[lang];
---

<Layout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <aside data-pagefind-ignore>
      <h1 class="font-semibold text-black dark:text-white">
        {pageContent.title}
      </h1>
      <div class="space-y-16">
        <section>
          <article class="space-y-4">
            <span>
              <p>
                {pageContent.description} <Link href="https://astro.build/">Astro</Link>.
                {pageContent.additionalInfo} <Link href="https://pagefind.app/">Pagefind</Link> 
                <Link href="https://giscus.app">Giscus</Link> 
                <Link href="/blog/00-micro-changelog">blog post</Link>.
              </p>
            </span>
            <span class="animate">
              <p>
                {pageContent.microFeatures}
              </p>
              <p>
                {pageContent.getStarted}
                <Link href="https://github.com/trevortylerlee/astro-micro">
                  GitHub
                </Link>
              </p>
            </span>
          </article>
        </section>

        <section class="animate space-y-6">
          <div class="flex flex-wrap items-center justify-between gap-y-2">
            <h2 class="font-semibold text-black dark:text-white">
              {pageContent.latestPosts}
            </h2>
            <Link href={`/${locale}/blog`}> {pageContent.seeAllPosts} </Link>
          </div>
          <ul class="not-prose flex flex-col gap-4">
            {
              blog.map((post) => (
                <li>
                  <ArrowCard entry={post} locale={locale} />
                </li>
              ))
            }
          </ul>
        </section>

        <section class="animate space-y-6">
          <div class="flex flex-wrap items-center justify-between gap-y-2">
            <h2 class="font-semibold text-black dark:text-white">
              {pageContent.recentProjects}
            </h2>
            <Link href={`/${locale}/projects`}> {pageContent.seeAllProjects} </Link>
          </div>
          <ul class="not-prose flex flex-col gap-4">
            {
              projects.map((project) => (
                <li>
                  <ArrowCard entry={project} locale={locale} />
                </li>
              ))
            }
          </ul>
        </section>

        <section class="animate space-y-4">
          <h2 class="font-semibold text-black dark:text-white">
            {pageContent.letsConnect}
          </h2>
          <article>
            <p>
              {pageContent.contactInfo}
            </p>
          </article>
          <div class="flex flex-col gap-4">
            <ul class="not-prose flex flex-wrap gap-2">
              <li class="flex gap-x-2 text-nowrap">
                <a
                  href="javascript:void(0)"
                  data-cal-link={`${CAL_BOOKING.USERNAME}/${CAL_BOOKING.MEETING_SLUG}`}
                  data-cal-config='{"theme":"auto"}'
                  class="inline-block decoration-black/30 dark:decoration-white/30 hover:decoration-black/50 focus-visible:decoration-black/50 dark:hover:decoration-white/50 dark:focus-visible:decoration-white/50 text-current hover:text-black focus-visible:text-black dark:hover:text-white dark:focus-visible:text-white transition-colors duration-300 ease-in-out underline underline-offset-[3px] cursor-pointer"
                >
                  {pageContent.scheduleMeeting}
                </a>
                {"/"}
              </li>
              {
                SOCIALS.map((SOCIAL) => (
                  <li class="flex gap-x-2 text-nowrap">
                    <Link
                      href={SOCIAL.HREF}
                      external
                      aria-label={`${SITE.TITLE} ${lang === 'en' ? 'on' : 'no'} ${SOCIAL.NAME}`}
                    >
                      {SOCIAL.NAME}
                    </Link>
                    {"/"}
                  </li>
                ))
              }
              <li class="line-clamp-1">
                <Link
                  href={`mailto:${SITE.EMAIL}`}
                  aria-label={`Email ${SITE.TITLE}`}
                >
                  {SITE.EMAIL}
                </Link>
              </li>
            </ul>
          </div>
        </section>
      </div>
    </aside>
  </Container>
</Layout> 